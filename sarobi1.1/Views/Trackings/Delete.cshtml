@model sarobi1._1.Models.Tracking

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Admin2Layout.cshtml";
}

<h2>Borrar Tracking</h2>

<h4>Estás seguro deseas borrar este registro de hora?</h4>
<br />

<div>
    <hr />
    <dl class="dl-horizontal" style="overflow: hidden;padding:0;margin:0">
        <dt>
            Base:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Base.Nombre)
        </dd>
        <dt>
            Empleados:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Empleado.FullName)
        </dd>
        <dt>
            Horas:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Horas)
        </dd>

        <dt>
            Fecha:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Fecha)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <br /><br />
        <p>
            <button type="submit" class="btn btn-danger"> <span class="glyphicon glyphicon-trash"> </span> Borrar</button>  |
            @Html.ActionLink("Regresar", "Index")
        </p>
    }
</div>
