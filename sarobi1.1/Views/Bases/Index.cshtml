@model PagedList.IPagedList<sarobi1._1.Models.Base>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Index", "Bases", FormMethod.Get))
{
    <br />
    <p>
        <h2 style="display:inline;margin-right:30px;">Bases</h2>
        <div class="input-group" style="display:inline-block;margin-left:200px;margin-top:-30px;">

            @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control", placeholder = "Buscar.." })<span><button class="btn btn-primary" type="submit" style="display:inline;"><span class="glyphicon glyphicon-search"></span> </button></span>

            <div class="btn-group" role="group" style="margin-left:700px;margin-top:-60px;">
                <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("Create")'"><span class="glyphicon glyphicon-plus"></span> Crear</button> 
            </div>
        </div>

    </p>
}

<br /><br />

<table class="table table-condensed table-hover">
    <tr>
        <th>
            @Html.ActionLink("Base", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>

        <th>
            @Html.ActionLink("Oficiales Asignados", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Contacto", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Teléfono Contacto", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Nombre Supervisor", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @{
                foreach (var emp in item.Empleado)
                {
                     @emp.FullName <br />
                }
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Encargado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefono)
        </td>

        <td>
           @Html.DisplayFor(modelItem => item.Supervisor.FullName)
        </td>

        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @class = "glyphicon glyphicon-edit" }) |
            @Html.ActionLink(" ", "Details", new { id = item.ID }, new { @class = "glyphicon glyphicon-list-alt" }) |
            @Html.ActionLink(" ", "Delete", new { id = item.ID }, new { @class = "glyphicon glyphicon-trash" })
        </td>
    </tr>
}

</table>
<br />
Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))