@model sarobi1._1.Models.Base

@{
    ViewBag.Title = "Detalle Base";
    Layout = "~/Views/Shared/_Admin2Layout.cshtml";
}

<br />
<h2>Detalle Base</h2>

<div>

    <hr />
    <dl class="dl-horizontal" style="overflow: hidden;padding:0;margin:0">
        <dt>
            Base:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            Contacto:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Encargado)
        </dd>

        <dt>
            Teléfono Contacto:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Telefono)
        </dd>

        <dt>
            Dirección:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Direccion)
        </dd>

        <dt>
            Oficiales Asignados:
        </dt>

        <dd>
            @{
                foreach (var emp in Model.Empleado)
                {
                   @emp.FullName <br />
                }
            }
        </dd>

        <dt>
            <br />
            Supervisor:
        </dt>

        <dd></dd>

        @*
        <dd>
            <br />
        @* @Html.DisplayFor(model => model.Supervisor.PrimerNombre)
            @{
                foreach (var sup in Model.Empleado)
                {
                    @sup.Supervisor.FullName <br />
                }
            }
        </dd>
        *@
    </dl>
</div>
<br />
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.ID}, new { @class = "btn btn-info" }) |
    @Html.ActionLink("Regresar", "Index")
</p>
